---
import Layout from '../layouts/Layout.astro'
---

<main class="border border-gray-700 rounded-lg w-full mt-4 px-4 py-8">
  <div>
    <div class="flex items-center justify-between mb-4">
      <div>
        <h1 class="text-2xl font-bold">Daily Budget</h1>
        <p class="text-gray-400 mb-6">Your budget for today</p>
      </div>
      <div class="block">
        <h2 class="text-gray-400 text-xs">Daily allowance</h2>
        <h2 class="text-3xl font-bold">$100</h2>
      </div>
    </div>
    <input
      type="range"
      name="cuurent"
      id="current"
      class={`w-full h-2 bg-gray-700 appearance-none cursor-pointer`}
    />
    <div class="flex justify-between text-gray-400">
      <div>
        <h2>remainig days</h2>
        <span class="text-white text-lg">5</span>
      </div>
      <div>
        <h2>total</h2>
        <span class="text-white text-lg">$500</span>
      </div>
    </div>
  </div>
</main>
